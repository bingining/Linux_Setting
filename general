# using vim instead vi
ln -s /usr/bin/vim ~/bin/vi

# add to ~/.bashrc
alias pynote='jupyter notebook&'
alias xopen='xdg-open'
alias gtop='watch nvidia-smi'

# set git to store username
git config --global user.email "bingining@gmail.com"
git config --global user.name "bingining"
git config credential.helper store

# link software to ~/bin/directory
ln -s ~/opt/cluster/itpzucheng ~/bin/itpzucheng
ln -s ~/opt/julia/julia-1.0.3/bin/julia  ~/bin/julia1.0
ln -s ~/opt/julia/julia-0.6.4/bin/julia ~/bin/julia0.6
ln -s ~/bin/julia1.0 ~/bin/julia
